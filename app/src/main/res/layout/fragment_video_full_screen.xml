<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.VideoFullScreenFragment">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/videoSwapFace"
        android:background="@color/black"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:hide_on_touch="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:show_timeout="3000"
        app:use_controller="true" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:visibility="gone"
        android:src="@drawable/baseline_arrow_back_24"
        android:background="@drawable/bg_back_video"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintBottom_toBottomOf="@+id/videoSwapFace"
        app:layout_constraintEnd_toEndOf="@+id/videoSwapFace"
        app:layout_constraintStart_toStartOf="@+id/videoSwapFace"
        app:layout_constraintTop_toTopOf="@+id/videoSwapFace" />

</androidx.constraintlayout.widget.ConstraintLayout>